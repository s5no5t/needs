<%= form_for(@requirement) do |f| %>
  <% if @requirement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@requirement.errors.count, "error") %> prohibited this requirement from being saved:</h2>

      <ul>
      <% @requirement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  
  <p>
    <b>Derived from:</b>
    <% if @derived_from_requirement %>
      <%= render :partial => "req", :object => @derived_from_requirement %>
    <% end %>
    <%= select("requirement", "derived_from_requirement_id", Requirement.all.collect {|p| [ p.title, p.id ] }, {:include_blank => 'None'}) %>
  </p>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
